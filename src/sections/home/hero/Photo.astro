---
import Card from "@/components/Card.astro";

import { basics } from "@/config/site.json";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Card
  class={`
    ${className ?? ""}
    flex-col justify-end items-start gap-3 hidden xl:flex
  `}
>
  <img
    alt="Italo's photo"
    src={basics.profilePhoto}
    class="size-full object-cover absolute inset-0 opacity-90 dark:opacity-85"
  />
</Card>
