---
import Card from "@/components/Card.astro";
import OptimizedImage from "@/components/OptimizedImage.astro";

import { basics } from "@/config/site.json";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Card
  class={`
    ${className ?? ""}
    flex-col justify-end items-start gap-3 hidden xl:flex
  `}
>
  <OptimizedImage
    alt="Me smiling (:"
    src={basics.profilePhoto}
    class="aspect-square size-full object-cover absolute inset-0 opacity-90 dark:opacity-85"
  />
</Card>
