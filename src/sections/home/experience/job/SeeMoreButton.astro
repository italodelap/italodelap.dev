---
import AnimatedLink from "@/components/AnimatedLink.astro";

interface Props {
  url: string;
}

const { url } = Astro.props;
---

<AnimatedLink
  href={url}
  class={`
    px-6 py-2 text-base sm:opacity-0
    transition-all duration-500 ease-in-out
    sm:group-hover:opacity-100 hover:shadow-lg hover:shadow-gray-600/50 dark:hover:shadow-gray-400/50
  `}
>
  See more
</AnimatedLink>
