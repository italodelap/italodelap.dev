---
import type { CollectionEntry } from "astro:content";

import OptimizedImage from "@/components/OptimizedImage.astro";

interface Props {
  cover: CollectionEntry<"work-experience">["data"]["cover"];
}

const { cover } = Astro.props;
---

<OptimizedImage
  src={cover.src}
  alt={cover.alt}
  class={`
    object-cover size-full aspect-video opacity-60
    transition-transform group-hover:scale-110 dark:opacity-40
  `}
/>
