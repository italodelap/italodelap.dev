---
import OptimizedImage from "@/components/OptimizedImage.astro";

import type { ExperienceEntry } from "@/types";

interface Props {
  image: ExperienceEntry["cover"];
  companyName: ExperienceEntry["company"];
}

const { image, companyName } = Astro.props;
---

<OptimizedImage
  src={image}
  alt={`${companyName} logo`}
  class="object-cover transition-transform scale-110 size-full aspect-video opacity-60 group-hover:scale-125 dark:opacity-40"
/>
