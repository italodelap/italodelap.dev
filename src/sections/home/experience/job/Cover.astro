---
import type { CollectionEntry } from "astro:content";

import OptimizedImage from "@/components/OptimizedImage.astro";

type Props = Pick<
  CollectionEntry<"work-experience">["data"],
  "company" | "cover"
>;

const { company, cover } = Astro.props;
---

<OptimizedImage
  src={cover.src}
  alt={`${company} logo`}
  class="object-cover transition-transform scale-110 size-full aspect-video opacity-60 group-hover:scale-125 dark:opacity-40"
/>
