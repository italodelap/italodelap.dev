---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  label?: string;
}

const { class: className, href, label, rel, target, title } = Astro.props;
---

<a
  rel={rel}
  href={href}
  title={title}
  target={target}
  aria-labelledby={label}
  class={`
    ${className ?? ""}
    group/button relative inline-flex items-center justify-center overflow-hidden
    border rounded-md bg-gray-800/30 border-white/20 font-semibold text-white
  `}
>
  <span>
    <slot />
  </span>
  <div
    class="absolute inset-0 flex h-full w-full justify-center [transform:skew(-13deg)_translateX(-100%)] group-hover/button:duration-700 group-hover/button:[transform:skew(-13deg)_translateX(100%)]"
  >
    <div class="relative w-10 h-full bg-white/20"></div>
  </div>
</a>
