---
interface Props {
  yearsAmount?: number;
}

const { yearsAmount = 0 } = Astro.props;
---

<years-counter
  data-years-amount={yearsAmount}
  class="text-center font-space-mono text-7xl font-bold select-none text-neutral-800/90 dark:text-neutral-300"
>
  +0
</years-counter>

<script src="@/lib/counter"></script>
